<h1>Burgers!</h1>

<h2>Burgers waiting to be devoured</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Being Devoured!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger </h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devouring?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Devouring!<br>
    <input type="radio" name="sleepy" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>
